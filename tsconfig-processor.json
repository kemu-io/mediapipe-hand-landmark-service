{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"],
  "compilerOptions": {
    "target": "ESNext", 
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "esModuleInterop": false,
    "removeComments": false,
    "outDir": "./dist", 
    "rootDir": "./src", 
    "declaration": false,
    "emitDeclarationOnly": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "lib": ["ESNext", "DOM"],
  }
}
